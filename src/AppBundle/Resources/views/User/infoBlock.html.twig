{% if userData.hasUser %}
    {% set discoverUserInfo = userData %}
    {% set loginedUserInfo = sessionData.userData %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ discoverUserInfo.nickname }}
                <div class="pull-right">
                    {% if sessionData.isLogin and discoverUserInfo.id == loginedUserInfo.id  %}
                        <a href="/user/edit/{{ loginedUserInfo.id }}" class="edit-link"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                    {% endif %}
                </div>
            </h3>
        </div>

        <div class="list-people panel-body">
            <div class="item pull-left">
                {% if discoverUserInfo.image %}
                    <img src={{ discoverUserInfo.image|imagine_filter('main_list') }} class="img-thumbnail">
                {% else %}
                    <img src={{ "public/assets/images/default_avatar.png"|imagine_filter('main_list') }}  class="img-thumbnail">
                {% endif %}
            </div>
            <div class="item karma">
                <h2>{{ discoverUserInfo.karma }}</h2>
