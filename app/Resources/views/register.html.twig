{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="page-header">
                <h2 class="text-center">Register new user</h2>
            </div>
            <div id="js_register_form_errors" class="alert alert-danger" role="alert">
                <ul>
                    <li>
                        Password should contain 1 number
                    </li>
                    <li>
                        Enter good nickname
                    </li>
                </ul>

            </div>
            <form id="js_register_form">
                <div class="form-group">
                    <label for="register_form_name">Enter your nickname</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-sign-in" aria-hidden="true"></i>
                        </span>
                        <input type="text" id="register_form_name" class="form-control" minlength="4"
                               placeholder="ex. Ivan" aria-describedby="username" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="register_form_password">Enter your password</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </span>
                        <input type="password" id="register_form_password" class="form-control" minlength="5"
                               placeholder="ex. ivan1" aria-describedby="password" required>
                        <span class="input-group-addon">
                            <input id="js_disclose_password" type="checkbox" data-toggle="tooltip" data-placement="top" title="Disclose password">
                        </span>
                    </div>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
    {% verbatim %}
        <script >
            var register_page = true;
        </script>
    {% endverbatim %}
{% endblock %}
