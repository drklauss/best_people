{% extends 'base.html.twig' %}
{% block additions %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 col-sm-offset-9">
            {{ render( controller( 'AppBundle:RenderPages:renderAuthRegisterBlock', {'page' : 'login'} )) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="text-center">Login</h2>
                </div>
                <div class="panel-body">
                    <div id="js_register_form_errors" class="alert alert-danger" role="alert">
                        <ul>
                            <li>
                                Wrong password or nickname
                            </li>
                        </ul>
                    </div>
                    <form id="js_login_form">
                        <div class="form-group">
                            <label for="js_name_input">Enter your nickname</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                                </span>
                                <input type="text" id="js_name_input" class="form-control" minlength="4"
                                       placeholder="ex. Ivan" aria-describedby="username" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="js_password_input">Enter your password</label>
                            <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </span>
                                <input type="password" id="js_password_input" class="form-control" minlength="5"
                                       placeholder="ex. ivan1" aria-describedby="password" required>
                                <span class="input-group-addon">
                            <input id="js_disclose_password" type="checkbox" data-toggle="tooltip" data-placement="top"
                                   title="Disclose password">
                        </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="g-recaptcha" data-sitekey="6LfOtQkUAAAAAJI7XxTYC01iwoQNkxKZ6GA8qRXr"></div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-8 pull-right">
                                <button type="submit" id="js_register_btn" class="btn btn-primary">Log in Me</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    {% verbatim %}
        <script >
            var login_page = true;
        </script>
    {% endverbatim %}
{% endblock %}
