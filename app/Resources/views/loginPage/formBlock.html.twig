<div class="panel panel-primary">

    {#<div class="panel-heading">#}
    {#<h2 class="text-center">Login</h2>#}
    {#</div>#}
    <div class="panel-body">
        <div id="jsLoginFormErrors" class="alert alert-danger hidden" role="alert">
            <ul></ul>
        </div>
        <form id="jsLoginForm">
            <div class="form-group">
                <label for="jsNameInput">Enter your nickname</label>
                <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                                </span>
                    <input name="nickname" type="text" id="jsNameInput" class="form-control"
                           placeholder="ex. Ivan" aria-describedby="username" required>
                </div>
            </div>
            <div class="form-group">
                <label for="jsPasswordInput">Enter your password</label>
                <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                </span>
                    <input name="password" type="password" id="jsPasswordInput" class="form-control" minlength="5"
                           placeholder="ex. ivan1" aria-describedby="password" required>
                    <span class="input-group-addon">
                                    <input id="jsDisclosePassword" type="checkbox" data-toggle="tooltip"
                                           data-placement="top"
                                           title="Disclose password">
                                </span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="g-recaptcha" data-sitekey="6LfOtQkUAAAAAJI7XxTYC01iwoQNkxKZ6GA8qRXr"></div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-4 col-sm-offset-8 pull-right">
                    <button type="button" id="jsLoginBtn" class="btn btn-primary">Log in Me</button>
                </div>
            </div>
        </form>
    </div>
</div>