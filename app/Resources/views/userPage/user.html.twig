{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-4 col-sm-offset-3">
            <div class="page-header">
                {% if hasUser %}
                    <h2><i class="fa fa-info" aria-hidden="true"></i> Personal Information</h2>
                {% else %}
                    <h2><i class="fa fa-frown-o fa-lg" aria-hidden="true"></i> The user is not found</h2>
                {% endif %}
            </div>
        </div>
        <div class="col-sm-2">
            {% include 'homePage/userInfoBlock.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            {% if hasUser %}
                {% include 'userPage/detailBlock.html.twig' %}
                <div class="page-header">
                    <h3><i class="fa fa-commenting-o" aria-hidden="true"></i> Votes History</h3>
                </div>
                {% include 'userPage/votesBlock.html.twig' %}
                <div class="page-header">
                    <h3><i class="fa fa-comments-o" aria-hidden="true"></i> Comments</h3>
                </div>
                {% include 'userPage/commentsBlock.html.twig' %}
            {% endif %}
            {% if hasUser and sessionData.isLogin %}
                <div class="page-header">
                    <h3><i class="fa fa-paper-plane" aria-hidden="true"></i> Send Comment</h3>
                </div>
                {% include 'userPage/formBlock.html.twig' %}
            {% else %}
                <h4 style="text-align: center">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    You should <a href="/login">login</a> before send comment
                </h4>
            {% endif %}
        </div>

    </div>
    {% verbatim %}
        <script >
            var userInfo = true;
        </script>
    {% endverbatim %}
{% endblock %}
